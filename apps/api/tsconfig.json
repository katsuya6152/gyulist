{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"lib": ["ESNext", "DOM"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@/shared/*": ["src/shared/*"],
			"@/contexts/*": ["src/contexts/*"],
			"@/db/*": ["src/db/*"],
			"@/lib/*": ["src/lib/*"],
			"@/middleware/*": ["src/interfaces/http/middleware/*"],
			"@/routes/*": ["src/routes/*"]
		}
	},
	"include": ["src/**/*"]
}
