{
	"name": "@repo/api",
	"main": "./dist/index.js",
	"type": "module",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup ./src/index.ts --dts --format esm",
		"build:watch": "tsup ./src/index.ts --dts --format esm --watch",
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify --env production",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"generate": "drizzle-kit generate",
		"migrate:local": "wrangler d1 migrations apply gyulist --local",
		"migrate:remote": "wrangler d1 migrations apply gyulist --remote --env production",
		"create-dummy-data:local": "npx wrangler d1 execute gyulist --local --file=./src/db/dummy/dummy_data.sql",
		"create-dummy-data:remote": "wrangler d1 execute gyulist --remote --file=./src/db/dummy/dummy_data.sql --env production",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"openapi:gen": "tsx ./scripts/generate-openapi.ts",
		"docs:gen": "typedoc --options ./typedoc.json",
		"docs:serve": "http-server ../../docs/tsdoc/api -p 4321 -a 127.0.0.1 -c-1",
		"docs:regen-serve": "pnpm run docs:gen && pnpm run docs:serve",
		"batch:test": "curl -X GET http://localhost:8787/cron/batch",
		"batch:breeding-status": "curl -X POST 'http://localhost:8787/api/v1/batch/breeding-status?limit=100&force=false'",
		"batch:breeding-summary": "curl -X POST 'http://localhost:8787/api/v1/batch/breeding-summary?limit=100&force=false'",
		"batch:alerts": "curl -X POST 'http://localhost:8787/api/v1/batch/alerts?limit=100&force=false'",
		"batch:all": "curl -X POST 'http://localhost:8787/api/v1/batch/all?limit=100&force=false'"
	},
	"dependencies": {
		"@hono/swagger-ui": "^0.4.0",
		"@hono/zod-openapi": "^0.15.3",
		"@hono/zod-validator": "^0.5.0",
		"@node-rs/bcrypt": "^1.10.7",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"arctic": "^2.1.0",
		"bcryptjs": "^3.0.2",
		"drizzle-orm": "^0.43.1",
		"drizzle-zod": "^0.8.2",
		"hono": "^4.7.7",
		"zod": "^3.25.28"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250429.0",
		"@types/node": "^20",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"drizzle-kit": "^0.31.0",
		"esbuild": "^0.25.3",
		"http-server": "^14.1.1",
		"tsup": "^8.4.0",
		"tsx": "^4.20.4",
		"typedoc": "^0.27.9",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4",
		"wrangler": "^4.16.1"
	}
}
