{
	"name": "@repo/api",
	"main": "./dist/index.js",
	"type": "module",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup ./src/index.ts --dts --format esm",
		"build:watch": "tsup ./src/index.ts --dts --format esm --watch",
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify --env production",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"generate": "drizzle-kit generate",
		"migrate:local": "wrangler d1 migrations apply gyulist --local",
		"migrate:remote": "wrangler d1 migrations apply gyulist --remote",
		"create-dummy-data:local": "npx wrangler d1 execute gyulist --local --file=./src/db/dummy/dummy_data.sql",
		"create-dummy-data:remote": "wrangler d1 execute gyulist --remote --file=./src/db/dummy/dummy_data.sql",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.5.0",
		"@node-rs/bcrypt": "^1.10.7",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"arctic": "^2.1.0",
		"bcryptjs": "^3.0.2",
		"drizzle-orm": "^0.43.1",
		"drizzle-zod": "^0.8.2",
		"hono": "^4.7.7",
		"zod": "^3.25.28"
	},
	"devDependencies": {
		"@types/node": "^20",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"drizzle-kit": "^0.31.0",
		"esbuild": "^0.25.3",
		"tsup": "^8.4.0",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4",
		"wrangler": "^4.16.1"
	}
}
